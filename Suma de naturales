#include "stdafx.h"
#include<conio.h>
#include"math.h"
#include <iostream>

using namespace std;

int main()
{
	int n,suma,i;
	cout<<"Ingrese la cantidad de numeros a sumar: ";
	cin>>n;
	i=0;
	suma=0;
	while (i!=n)
	{
		i=i+1;
	suma=suma+i;
	}
	cout<<"La suma de los primeros "<<n<<" numeros naturales es: ";
	cout<<suma;
	getch();
	return 0;
}

